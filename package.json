{
  "name": "linkedin-job-assistant",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "extension:dev": "npm run dev --workspace=apps/extension",
    "dashboard:dev": "npm run dev --workspace=apps/dashboard",
    "extension:build": "npm run build --workspace=apps/extension",
    "dashboard:build": "npm run build --workspace=apps/dashboard"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@playwright/test": "^1.54.2"
  }
}
